<% include ./partials/header %>
<div class="container">
    <h1>Edit Blog</h1>
    <div class="jumbotron">
    <% blog.forEach(function(result){ %>
    <form action="/blogs/<%= result.id%>?_method=PUT" method= "POST" >
        <div class="form-group">
            <label for="exampleFormControlInput1">Title</label>                             
            <input type = "text" class="form-control" id="exampleFormControlInput1" name = "title" value ="<%=result.title%>">
        </div>
        <div class="form-group">
            <label for="exampleFormControlInput1">Image</label>
            <input type = "text" class="form-control" id="exampleFormControlInput1" name = "image" value ="<%=result.image%>">
        </div>
        
        <div class="form-group">
            <label for="exampleFormControlTextarea1">Body</label>
            <textarea type = "text" class="form-control" id="exampleFormControlTextarea1" name = "body" placeholder = "blog post goes here" rows="4"><%=result.body%></textarea>
        </div>
        <% }) %>
        <button class="btn btn-primary"  type = "submit">submit </button>
    </form>
    </div>
</div>



<% include ./partials/footer %>        